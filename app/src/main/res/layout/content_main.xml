<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nanodegree Apps!!"
        android:id="@+id/txt_label"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="SPOTIFY STREAMER"
        android:id="@+id/btn_spotify"
        android:layout_below="@+id/txt_label"
        style="@style/btn_myapp"
         />

    <Button

        android:text="SCORES APP"
        android:id="@+id/btn_scores"
        android:layout_below="@+id/btn_spotify"
        style="@style/btn_myapp"
        />

    <Button
        android:text="LIBARARY APP"
        android:layout_below="@+id/btn_scores"
        android:id="@+id/btn_library"
        style="@style/btn_myapp"/>

    <Button
        android:text="BUILD IT BIGGER"
        android:id="@+id/btn_build_it_bigger"
        android:layout_below="@+id/btn_library"
        style="@style/btn_myapp" />

    <Button
        android:text="XYZ READER"
        android:id="@+id/btn_xyz_reader"
        android:layout_below="@+id/btn_build_it_bigger"
        style="@style/btn_myapp"/>

    <Button
        android:text="CAPSTONE: MY OWN APP"
        android:id="@+id/btn_capstone"
        android:background="@android:color/holo_red_dark"
        android:layout_below="@+id/btn_xyz_reader"
        style="@style/btn_myapp" />
</RelativeLayout>
